<UserControl x:Class="ShutDown.Views.Operations.CurrentOperationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShutDown.Views.Operations"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:CurrentOperationViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Silver"
                             Opacity="0.95" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding OperationName.Value}"
                   Style="{StaticResource H1}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
        />

        <TextBlock Grid.Row="1"
                   Style="{StaticResource H1}"
                   FontSize="28"
                   Foreground="DodgerBlue"
                   FontWeight="Bold"
                   Text="{Binding RemainingTime.Value}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <Button Grid.Row="2"
                Content="Cancel"
                Style="{StaticResource BtnSelect}"
                VerticalAlignment="Center"
                Command="{Binding CancelShutDownCommand}"
                Visibility="{Binding IsCanceledDoToTimeGap.Value, Converter={StaticResource TrueToCollapsedConverter}}"
                />

        <Button Grid.Row="2"
                Content="Close"
                Style="{StaticResource BtnSelect}"
                VerticalAlignment="Center"
                Command="{Binding CancelShutDownCommand}"
                Visibility="{Binding IsCanceledDoToTimeGap.Value, Converter={StaticResource BoolToVisibilityConverter}}"
        />

    </Grid>
</UserControl>
