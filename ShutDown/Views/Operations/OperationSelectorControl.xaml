<UserControl x:Class="ShutDown.Views.Operations.OperationSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShutDown.Views.Operations"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:OperationSelectorViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Manual settings"
                               Style="{StaticResource H1}" />

        <Grid Grid.Row="1"
                          Margin="0, 20, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Select operation"
                                   Style="{StaticResource H2}" />
            <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Margin="20, 0, 0, 0">
                <Button Style="{StaticResource BtnSelect}"
                                    Content="Shut down"
                                    Background="{Binding Operation, Converter={StaticResource OperationToColorConverter}, ConverterParameter=ShutDown}"
                                    Command="{Binding SelectOperationCommand}"
                                    CommandParameter="ShutDown" />
                <Button Style="{StaticResource BtnSelect}"
                                    Content="Restart"
                                    Background="{Binding Operation, Converter={StaticResource OperationToColorConverter}, ConverterParameter=Restart}"
                                    Command="{Binding SelectOperationCommand}"
                                    CommandParameter="Restart" />
                <Button Style="{StaticResource BtnSelect}"
                                    Content="Hibernate"
                                    Background="{Binding Operation, Converter={StaticResource OperationToColorConverter}, ConverterParameter=Hibernate}"
                                    Command="{Binding SelectOperationCommand}"
                                    CommandParameter="Hibernate" />
                <Button Style="{StaticResource BtnSelect}"
                                    Content="Log off"
                                    Background="{Binding Operation, Converter={StaticResource OperationToColorConverter}, ConverterParameter=SignOut}"
                                    Command="{Binding SelectOperationCommand}"
                                    CommandParameter="SignOut" />
                <Button Style="{StaticResource BtnSelect}" 
                                    Content="Sleep" 
                                    Background="{Binding Operation, Converter={StaticResource OperationToColorConverter}, ConverterParameter=Sleep}" 
                                    Command="{Binding SelectOperationCommand}" 
                                    CommandParameter="Sleep" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2"
                          Margin="0, 20, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Select delay"
                                   Style="{StaticResource H2}" />

            <Slider Minimum="5"
                                Maximum="1440"
                                SmallChange="5"
                                LargeChange="60"
                                Grid.Column="1"
                                Margin="20, 0"
                                VerticalAlignment="Center"
                                Value="{Binding DelayInMinutes.Value, Mode=TwoWay}">
            </Slider>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="BorderThickness"
                                            Value="0" />
                        <Setter Property="Width"
                                            Value="30" />
                        <Setter Property="Height"
                                            Value="20" />
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="DodgerBlue" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <Button Content="+5"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Command="{Binding AddDelayCommand}"
                                    CommandParameter="5" />
                <Button Content="+15"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Command="{Binding AddDelayCommand}"
                                    CommandParameter="15" />
                <Button Content="-5"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Command="{Binding AddDelayCommand}"
                                    CommandParameter="-5" />
                <Button Content="-15"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Command="{Binding AddDelayCommand}"
                                    CommandParameter="-15" />
            </Grid>

        </Grid>

        <Grid Grid.Row="3"
                          Margin="0, 0, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Delay:"
                                   Style="{StaticResource H2}" />
            <TextBlock Grid.Column="1"
                                   Margin="10, 0, 0, 0"
                                   Foreground="DodgerBlue"
                                   FontWeight="Bold"
                                   Style="{StaticResource H2}"
                                   Text="{Binding DelayText.Value}" />
            <Button Grid.Column="2"
                                BorderThickness="2"
                                BorderBrush="MidnightBlue"
                                Margin="20, 0"
                                Width="170"
                                Background="DodgerBlue"
                                Content="Start with manual setting"
                                Command="{Binding StartShutDownCommand}"/>

            <Button Grid.Column="3"
                                Margin="0, 0"
                                Content="Force?"
                                Width="70"
                                Command="{Binding ToggleForceCommand}"
                                Background="{Binding Force.Value, Converter={StaticResource BoolToColorConverter}}" />

        </Grid>

        <TextBlock Grid.Row="4" HorizontalAlignment="Right"
                               Margin="20, 0"
                               Visibility="{Binding Force.Value, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Run>Use the</Run>
                        <Run Foreground="DodgerBlue">Force</Run>
                        <Run>at your own risk!</Run>
        </TextBlock>
    </Grid>
</UserControl>
